<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   
   <TextView
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:background="@drawable/photo36"/>
   
   <Button
       android:id="@+id/buttonId_1"
       android:layout_width="wrap_content"
       android:layout_height="60dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:text="调整属性"
       android:textSize="20sp" />

   <Button
       android:id="@+id/buttonId_2"
       android:layout_width="wrap_content"
       android:layout_height="60dp"
       android:layout_alignParentBottom="true"
       android:layout_toRightOf="@id/buttonId_1"
       android:text="背景交换"
       android:textSize="20sp" />
   
   <Button
       android:id="@+id/buttonId_3"
       android:layout_width="wrap_content"
       android:layout_height="60dp"
       android:layout_alignParentBottom="true"
       android:layout_toRightOf="@id/buttonId_2"
       android:text="美化照片"
       android:textSize="20sp" />
   
   <ImageView 
       android:layout_width="300dp"
       android:layout_height="200dp"
       android:layout_centerInParent="true"
       android:src="@drawable/alfeir"
       />

</RelativeLayout>
